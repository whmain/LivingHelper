<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="5dp"
                                    card_view:contentPadding="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_news_list_item_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_news_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_news_list_item_icon"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_news_list_item_icon"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="欧弟与女儿电梯前自拍 JoJo穿小裙子戴小花超呆萌"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_news_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_news_list_item_icon"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_news_list_item_icon"
            android:text="2017.09.13 15:15:08"
            android:textColor="#333333"
            android:textSize="16sp"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>
