<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="5dp"
                                    card_view:contentPadding="8dp"
    android:id="@+id/cv_cookbook_list_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_cookbook_list_item_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_cook_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_cookbook_list_item_icon"
            android:layout_toRightOf="@+id/iv_cookbook_list_item_icon"
            android:layout_marginLeft="10dp"
            android:text="菜名:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_cook_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_cook_name_label"
            android:layout_alignTop="@+id/tv_cook_name_label"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="油焖大虾"
            android:textColor="#333333"
            android:textSize="20sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_cook_peoplenum_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用餐人数:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_cookbook_list_item_icon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_cool_peoplenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_cook_peoplenum_label"
            android:layout_alignTop="@+id/tv_cook_peoplenum_label"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="油焖大虾"
            android:textColor="#333333"
            android:textSize="16sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_cook_label_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_cookbook_list_item_icon"
            android:layout_toRightOf="@+id/iv_cookbook_list_item_icon"
            android:layout_marginLeft="10dp"
            android:text="标签:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_cook_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_cook_label_label"
            android:layout_alignTop="@+id/tv_cook_label_label"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="健脾开胃,儿童,减肥,宴请,家常菜,小吃,炸,白领,私房菜,聚会"
            android:textColor="#333333"
            android:textSize="20sp"
            android:gravity="center_vertical"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
