<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cook_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ahern.livinghelper.recreation.cookbook.ui.CookDetailActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cookbook_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_tabbar_default"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:navigationIcon="@drawable/ic_back">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜式详情"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_cook_detail_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="菜名:"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_cook_detail_cook_name"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:text="川香小炒肉"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="用餐人数:"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_cook_detail_peoplenum"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:text="3-4人"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="准备时间:"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_cook_detail_preparetime"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:text="10分钟内"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="烹饪时间:"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_cook_detail_cookingtime"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:text="10-20分钟"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="标签:"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_cook_detail_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="健脾开胃,儿童,减肥,宴请,家常菜,小吃,炸,白领,私房菜,聚会"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="介绍:"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_cook_detail_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="炸茄盒外焦里嫩，入口不腻，咬上一口，淡淡的肉香和茄子的清香同时浮现，让人心动不已。"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="主料:"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_cook_detail_main_ingredient"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="鸡蛋1个;番茄2个;土豆3个"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="配料:"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_cook_detail_burdening"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="白糖1g;酱油2勺;白醋3勺"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="制作过程:"
                android:textSize="16sp"
                android:textColor="#111111"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>

            <com.ahern.livinghelper.common.view.AdaptHeightRecyclerView
                android:id="@+id/rv_cook_detail_process"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
