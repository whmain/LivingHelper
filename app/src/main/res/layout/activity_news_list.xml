<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_news_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ahern.livinghelper.recreation.newschannel.ui.NewsListActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_news_list"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_tabbar_default"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:navigationIcon="@drawable/ic_back"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻频道"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <!--<LinearLayout-->
        <!--android:id="@+id/ll_news_list_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_below="@+id/toolbar_news_list">-->
        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs_news_list"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            app:pstsIndicatorColor="@color/color_tabbar_default"
            app:pstsIndicatorHeight="2dp"
            app:pstsDividerPadding="12dp"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_news_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <!--</LinearLayout>-->

    <!--<ProgressBar-->
        <!--android:id="@+id/pb_news_list"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"/>-->
</LinearLayout>
